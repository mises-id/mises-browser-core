import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "proc_macro_hack"
  epoch = "0.5"
  crate_type = "proc-macro"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//mises/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/build.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/src/error.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/src/iter.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/src/lib.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/src/parse.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/src/quote.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/tests/compiletest.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/tests/ui/private.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/tests/ui/unexpected-arg.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/tests/ui/unexpected.rs",
    "//mises/third_party/rust/proc_macro_hack/v0_5/crate/tests/ui/unknown-arg.rs",
  ]
  inputs = [ "//mises/third_party/rust/proc_macro_hack/v0_5/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.5.20+deprecated"
  cargo_pkg_authors = "David Tolnay <dtolnay@gmail.com>"
  cargo_pkg_name = "proc-macro-hack"
  cargo_pkg_description = "Procedural macros in expression position"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
