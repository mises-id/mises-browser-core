import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "tendril"
  epoch = "0.4"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//mises/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//mises/third_party/rust/tendril/v0_4/crate/examples/fuzz.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/bench.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/buf32.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/fmt.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/lib.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/stream.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/tendril.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/utf8_decode.rs",
    "//mises/third_party/rust/tendril/v0_4/crate/src/util.rs",
  ]
  inputs = [ "//mises/third_party/rust/tendril/v0_4/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2015"
  cargo_pkg_version = "0.4.3"
  cargo_pkg_authors = "Keegan McAllister <mcallister.keegan@gmail.com>, Simon Sapin <simon.sapin@exyr.org>, Chris Morgan <me@chrismorgan.info>"
  cargo_pkg_name = "tendril"
  cargo_pkg_description = "Compact buffer/string type for zero-copy parsing"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//mises/third_party/rust/futf/v0_1:lib",
    "//mises/third_party/rust/mac/v0_1:lib",
    "//mises/third_party/rust/utf_8/v0_7:lib",
  ]
  aliased_deps = {
    utf8 = "//mises/third_party/rust/utf_8/v0_7:lib__rlib"
  }
}
